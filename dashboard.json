{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "10.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus", "version": "3.0.0" },
    { "type": "panel", "id": "timeseries", "name": "Time series", "version": "" },
    { "type": "panel", "id": "stat", "name": "Stat", "version": "" },
    { "type": "panel", "id": "bargauge", "name": "Bar gauge", "version": "" }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": { "type": "grafana", "uid": "-- Grafana --" },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "iteration": 1724064000000,
  "links": [],
  "panels": [
    {
      "id": 1,
      "title": "RAG Request Rate (req/s)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rag_requests_total[5m]))",
          "legendFormat": "requests/s"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "P95 Latency (s)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(rag_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "id": 3,
      "title": "Avg Tokens per Call",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rag_total_tokens_sum[5m])) / sum(rate(rag_total_tokens_count[5m]))",
          "legendFormat": "avg tokens"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 4,
      "title": "Feedback (Up / Down) per 1h",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(feedback_up_total[1h]))",
          "legendFormat": "üëç up (last 1h)"
        },
        {
          "refId": "B",
          "expr": "sum(increase(feedback_down_total[1h]))",
          "legendFormat": "üëé down (last 1h)"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "id": 5,
      "title": "Feedback Approval Rate (%)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } },
      "targets": [
        {
          "refId": "A",
          "expr": "100 * sum(increase(feedback_up_total[1h])) / (sum(increase(feedback_up_total[1h])) + sum(increase(feedback_down_total[1h])))",
          "legendFormat": "approval %"
        }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 16 }
    },
    {
      "id": 6,
      "title": "Errors per Second",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(rag_errors_total[5m]))",
          "legendFormat": "errors/s"
        }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 16 }
    },
    {
      "id": 7,
      "title": "Conversations Saved (per min)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(conversation_saved_total[1m]))",
          "legendFormat": "saves/min"
        }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 16 }
    },
    {
      "id": 8,
      "title": "App Health",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false } },
      "targets": [
        { "refId": "A", "expr": "app_healthy" }
      ],
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 16 }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["music-theory-assistant", "monitoring", "rag"],
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"] },
  "timezone": "browser",
  "title": "Music Theory Assistant ‚Äî RAG Monitoring",
  "uid": "mta-rag-dashboard",
  "version": 1
}
